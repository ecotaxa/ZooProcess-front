{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/api/*": ["./app/api/*"],
      "@/network/*": ["./app/api/network/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/api/formatDateAndTime.js",
    "test-task.js"
  ],
  "exclude": ["node_modules"],
  "types": ["react-dom/experimental", "jest"]
}
